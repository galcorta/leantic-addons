          groups="base.group_no_one"/>-->

    <record model="ir.ui.view" id="account_fiscal_stamp_form">
      <field name="name">account.fiscal.stamp.view.form</field>
      <field name="model">account.fiscal.stamp</field>
      <field name='arch' type='xml'>
        <form string="Fiscal stamp">
          <sheet>
            <div class="oe_title">
                <label for="number" class="oe_edit_only"/>
                <h1>
                    <field name="number" class="oe_inline"/>
                </h1>
                <group>
                    <field name="start_date"/>
                    <field name="due_date"/>
                    <field name="is_valid"/>
                </group>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="account_fiscal_stamp_view_tree">
      <field name="name">account.fiscal.stamp.view.tree</field>
      <field name="model">account.fiscal.stamp</field>
      <field name="arch" type="xml">
        <tree string="Fiscal stamps">
            <field name="number" />
            <field name="start_date"/>
            <field name="due_date" />
            <field name="is_valid" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="account_dispatch_point_view_form">
      <field name="name">account.dispatch.point.view.form</field>
      <field name="model">account.dispatch.point</field>
      <field name='arch' type='xml'>
        <form string="Dispatch point">
            <sheet>
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <h2>
                        <field name="company_id"
                               placeholder="Company..."/>
                        <field name="legal_id"
                               placeholder="Legal ID..."/>
                    </h2>
                </div>
                <group string="General info">
                  <group colspan="2" cols="2">
                    <field name="usage" />
                    <field name="sequence" />
                  </group>
                </group>
                <group string="Accounting info">
                    <field name="fiscal_stamp_id" options="{'create': False, 'create_edit': False, 'limit': 3}"/>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="account_dispatch_point_view_tree">
      <field name="name">account.dispatch.point.view.tree</field>
      <field name="model">account.dispatch.point</field>
      <field name="arch" type="xml">
        <tree string="Dispatch points">
          <field name="name" />
          <field name="company_id" />
          <field name="usage" />
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="account_fiscal_stamp_action">
      <field name="name">Fiscal stamp</field>
      <field name="res_model">account.fiscal.stamp</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

