    <record model="ir.actions.act_window" id="account_dispatch_point_action">
      <field name="name">Dispatch point</field>
      <field name="res_model">account.dispatch.point</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Dispatch points" id="account_dispatch_point_menu"
              parent="account.account_management_menu"
              action="account_dispatch_point_action"
              sequence="5"
              groups="account.group_account_manager"/>

  </data>
</odoo>