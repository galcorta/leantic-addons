<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="res_company_view_form_fiscal_stamps">
            <field name="name">res.company.view.form.fiscal.stamps</field>
            <field name="model">res.company</field>
            <field name='inherit_id' ref='base.view_company_form'/>
            <field name='arch' type='xml'>
                <notebook position="inside">
                    <page string="Accounting">
                        <group string="Fiscal stamps">
                            <field name="fiscal_stamp_ids" nolabel="1"
                                   context="{'default_partner_id': partner_id, 'footer_hide': False}"/>
                        </group>
                    </page>
                </notebook>
                <!--<xpath expr="//div[@class='oe_title']" position="before">-->
                <xpath expr="//label[@for='name']" position="replace">
                    <div class="oe_edit_only">
                        <label for="name"/> (
                        <field name="is_branch" class="oe_inline"/> <label for="is_branch" string="Is a Branch?"/>)
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>