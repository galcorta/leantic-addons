<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <record model="ir.ui.view" id="view_partner_form_fantasy_name">
          <field name="name">res.partner.view.form.fiscal.stamps</field>
          <field name="model">res.partner</field>
          <field name='inherit_id' ref='base.view_partner_form'/>
          <field name='arch' type='xml'>
                <xpath expr="//div[@class='oe_title']/h1" position="after">
                    <h2>
                        <field name="bussines_name" placeholder="Bussines name" attrs="{'invisible': [('is_company','=', False)], 'required' : ['&amp;',('type', '=', 'contact'),('is_company','=', True)]}"/>
                    </h2>
                </xpath>
                <field name="parent_id" position="replace">
                    <field name="parent_id"
                        placeholder="Company"
                        domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
                        attrs="{'invisible': True}"/>
                </field>
                <!-- <field name="name" position="replace">
                    <field name="name" default_focus="1" placeholder="Name" attrs="{'invisible': [('is_company','=', True)], 'required' : [('type', '=', 'contact')]}"/>
                    <field name="name" default_focus="1" placeholder="Fantasy name" attrs="{'invisible': [('is_company','=', False)], 'required' : [('type', '=', 'contact')]}"/>
                </field> -->
          </field>
    </record>

    <record model="ir.ui.view" id="view_partner_property_form_fiscal_stamps">
          <field name="name">res.partner.view.form.fiscal.stamps</field>
          <field name="model">res.partner</field>
          <field name='inherit_id' ref='account.view_partner_property_form'/>
          <field name='arch' type='xml'>
                <xpath expr="//page[@name='accounting']" position="inside">
                    <group string="Fiscal stamps">
                        <field name="fiscal_stamp_ids" nolabel="1"
                            context="{'default_partner_id': active_id, 'footer_hide': False}"/>
                    </group>
                </xpath>
          </field>
    </record>

  </data>
</odoo>